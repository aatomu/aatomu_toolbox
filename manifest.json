{
  "name": "aatomu's Toolbox",
  "description": "Create by aatomu",
  "version": "0.1",
  "manifest_version": 3,
  "icons": {
    "64": "src/extension/icon.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "history",
    "scripting",
    "sidePanel",
    "storage",
    "tabs",
    "tabCapture"
  ],
  "action": {
    "default_icon": {
      "64": "src/extension/icon.png"
    },
    "default_title": "aatomu's Toolbox",
    "default_popup": "src/extension/popup/index.html"
  },
  "side_panel": {
    "default_path": "src/extension/sidepanel/index.html"
  },
  "commands": {
    "volume_booster": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      },
      "description": "Run \"Volume Booster\" on the current page."
    }
  },
  "background": {
    "service_worker": "src/extension/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "src/extension/content/creeper.css"
      ],
      "js": [
        "src/extension/content/contents.js"
      ]
    },
    {
      "run_at": "document_start",
      "matches": [
        "https://www.amazon.co.jp/*"
      ],
      "css": [
        "src/amazon.css"
      ],
      "js": [
        "src/amazon.js"
      ]
    },
    {
      "run_at": "document_start",
      "matches": [
        "https://www.google.com/*"
      ],
      "css": [
        "src/extension/secret.css"
      ],
      "js": [
        "src/google.js"
      ]
    },
    {
      "run_at": "document_start",
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "src/extension/injection.js",
        "src/youtube.js"
      ]
    }
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/extension/content/creeper.webp",
        "src/extension/content/insert.js",
        "src/amazon.css",
        "src/google.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}